{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ESP32-C6 JTAG Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/<your_program>.elf",
            "cwd": "${workspaceFolder}",
            "miDebuggerServerAddress": "localhost:3333",
            "miDebuggerPath": "${config:idf.custom.gdb}",
            "targetArchitecture": "riscv64-esp",
            "setupCommands": [
                {
                    "text": "target remote :3333"
                },
                {
                    "text": "monitor reset halt"
                },
                {
                    "text": "flushregs"
                }
            ],
            "externalConsole": false,
            "preLaunchTask": "idf: build",
            "postDebugTask": "idf: flash"
        }
    ]
}